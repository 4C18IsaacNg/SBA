program EWA_1;

uses
    SysUtils, Classes, Counter;

var
   A: TStringArray;
   S: array of string;
   inputStr: string;
   i, roc: integer;

begin
     writeln('Input a text: ');
     readln(inputStr);
     A := inputStr.Split(' ');
     SetLength(S, Length(A));
     roc := CountRunOnSentences(inputStr);

     for i := 0 to Length(A) - 1 do
         S[i] := A[i];

     writeln();
     writeln('Number of run-on sentences: ',roc);


     Readln;
end.              

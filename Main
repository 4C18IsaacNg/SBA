program EWA_1;

uses
    SysUtils, Classes, Counter;

type
    txt = array [0..2000] of string[50];

const
  Ting = 'mytext.txt';

var
   A: textFile;
   S: TStringArray;
   i, roc: integer;
   writing: string;

begin
     assignfile(A, Ting);
     reset(A);


     while not EOF(A) do
     begin
          readln(A, writing);

     end;
     writeln('This is your writing: ');
     writeln(writing);

     S:=writing.split(' ');
     roc := CountRunOnSentences(S);

     writeln();
     writeln('Number of run-on sentences: ',roc);


     Readln;
end.                                  

program EMA_1;

uses
    SysUtils, Classes, Counter, GrammarLibrary;

var
   A: textFile;
   S: TStringArray;
   i, roc: integer;
   writing, t: string;

begin
     assignfile(A, 'mytext.txt');
     reset(A);


     while not EOF(A) do
     begin
          readln(A, writing);

     end;
     writeln('This is your writing: ');
     writeln(writing);

     S := writing.split(' ');
     roc := CountRunOnSentences(S);

     writeln();
     writeln('Number of run-on sentences: ',roc);

     Readln;
end.                

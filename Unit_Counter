unit Counter;

{$mode ObjFPC}{$H+}

interface


uses
    SysUtils, Classes, CommaRuleLibrary;

function CountRunOnSentences(const S: TStringArray): integer;

implementation


function CountRunOnSentences(const S: TStringArray): integer;
var
   i, n, x, b: integer;
   count: integer;
   BC: Boolean;
   CRLibrary: CRL;

begin
     n := 0;
     x := 1;
     b := 0;
     count := 0;
     CRLibrary := CRL.Create;

     for i := n to Length(S) - 1 do
     begin
          if (pos('.',S[i]) > 0) or (pos('!',S[i]) > 0) or (pos('?',S[i]) > 0 ) then
          begin
               if i <> Length(S) - 1 then
               begin
                    n := i + 1;
                    x := x + 1;
                    b := n;
               end;
          end;

          if count < x then
          begin
               if pos(',',S[i]) > 0 then
               begin
                    BC := false;
                    for  n := b to i - 1 do
                    begin
                         if CRLibrary.SrchBC(S[n]) then
                            begin
                                 BC := true;
                                 Break;
                            end;
                    end;
                    b := i + 1;
                    if pos(',',S[i+1]) > 0 then
                       b := i + 2;
                    if not ( BC or CRLibrary.SrchAC(S[i+1]) or ( pos('ing',S[i+1])> 0 ) or ( pos(',',S[i+1]) > 0 ))then
                       count := count + 1;
               end;
          end;
     end;
     CRLibrary.Free;
     Result := count;
end;


end.
                       
